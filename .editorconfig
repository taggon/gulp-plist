# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true
charset = utf-8

# 4 space indentation
[*.{js,jsx,ts,tsx,md}]
indent_style = space
indent_size = 4

# 2 space indentation
[*.{css,scss,json,yml}]
indent_style = space
indent_size = 2
