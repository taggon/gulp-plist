{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "declaration": true,
    "target": "ES5",
    "module": "CommonJS",
    "moduleResolution": "node",
    "sourceRoot": "src",
    "outDir": "dist",
    "resolveJsonModule": true,
    "inlineSourceMap": false,
    "sourceMap": true,
    "strict": true,
    "typeRoots": ["typings", "node_modules/@types"],
    "types": ["node", "jest"]
  },
  "include": [
    "src/**/*",
    "typings/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
